# NZ Drought Early Warning Dashboard - Environment Configuration
# Copy this file to .env and fill in your actual values

# Database
DATABASE_URL=sqlite:///./data/drought.db
# For production (PostgreSQL on Render):
# DATABASE_URL=postgresql://user:pass@host:port/database

# NIWA DataHub (https://data.niwa.co.nz/)
NIWA_API_KEY=your_niwa_api_key_here
NIWA_DATAHUB_EMAIL=your.email@domain.com

# OpenWeatherMap (https://openweathermap.org/api)
OPENWEATHER_API_KEY=your_openweather_api_key_here

# Regional Council APIs (most are open, no keys needed)
# Add keys here if any councils require authentication

# Application Settings
ENVIRONMENT=development  # development | production
LOG_LEVEL=DEBUG  # DEBUG | INFO | WARNING | ERROR
CACHE_TTL_HOURS=12  # Brahmacharya: cache expiry
RATE_LIMIT_PER_DAY=1000  # Aparigraha: public API limit

# Frontend (for development only)
VITE_API_BASE_URL=http://localhost:8000/api